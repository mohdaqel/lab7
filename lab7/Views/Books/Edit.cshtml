@model lab7.Models.book

@{
    ViewData["Title"] = "Edit Book";
}

<div class="container">
    <h1>Edit Book</h1>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="imgfile" />
                
                <div class="form-group">
                    <label asp-for="title" class="control-label">Title</label>
                    <input asp-for="title" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="price" class="control-label">Price</label>
                    <input asp-for="price" class="form-control" type="number" step="0.01" />
                </div>
                
                @if (!string.IsNullOrEmpty(Model.imgfile))
                {
                    <div class="form-group">
                        <label>Current Image</label>
                        <img src="~/images/@Model.imgfile" class="img-thumbnail" style="max-width: 200px" />
                    </div>
                }
                
                <div class="form-group">
                    <label class="control-label">Change Image</label>
                    <input type="file" name="imageFile" class="form-control" accept="image/*" />
                </div>
                
                <div class="form-group mt-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="CatalogueBuy" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
