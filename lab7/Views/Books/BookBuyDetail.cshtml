@model lab7.Models.book

@{
    ViewData["Title"] = "Book Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2>@Model.title</h2>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.imgfile))
                    {
                        <img src="~/images/@Model.imgfile" class="img-fluid" alt="@Model.title" />
                    }
                    <h4 class="mt-3">Price: $@Model.price</h4>
                    
                    <form asp-action="AddToCart" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="form-group">
                            <label for="quantity">Quantity:</label>
                            <input type="number" class="form-control" id="quantity" name="quantity" value="1" min="1" required />
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Add to Cart</button>
                    </form>
                </div>
            </div>
            <div class="mt-3">
                <a asp-action="CatalogueBuy" class="btn btn-secondary">Back to Catalogue</a>
            </div>
        </div>
    </div>
</div>
